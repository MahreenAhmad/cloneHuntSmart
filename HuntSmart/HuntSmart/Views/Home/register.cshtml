@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = "Register Account - Hunt Smart";
}

<div id="main-wrapper">

  <!-- HOME PRO-->
  <div class="home-pro">
    <!-- PRO BANNER HEAD -->
    <div class="banr-head">
      <div class="container">
        <div class="row">
          <!-- CONTENT -->
          <div class="col-sm-7">
            <div class="text-area">
              <div class="position-center-center col-md-10">
                <h1> Here comes the social networking platform that you’ve been waiting for</h1>
                <h6>A socail plateform for finding jobs which suits your need. </h6>
              </div>
            </div>
          </div>

          <!-- FORM SECTION -->
          <div class="col-sm-5">
            <div class="login-sec">

              <!-- TABS -->
              <div class="uou-tabs">
                <ul class="tabs">
                  <li class="active">
                    <h3>
                      <a href="#register">Register Now</a>
                    </h3>
                  </li>
                  <!--<li class="active"><a href="#log-in">Member Login</a></li>-->
                </ul>
                <!-- REGISTER -->
                <div class="content">
                  <div id="register" class="active">
                    <form>
                      <input type="text" placeholder="Full Name">
                      <input type="email" placeholder="Email Address">
                      <input type="text" placeholder="Phone">
                      <input type="password" placeholder="Password">
                      <button onclick="location.href='/Home/index_l'" type="button"> Register </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section additionalScripts{
  <script>
  $(document).ready(function () {

    //alert("on ready called");
    $("#dialog").dialog({
      autoOpen: false,
      modal: true,
      resizable: true
    });
    $("#forgetEmail").on("click", function () {
      $("#dialog").dialog("open");
    });
    //$("#forgetEmail").on("click", function () {
    //    alert("-_-");
    //    });

    // Validating Form Fields.....
    $("#submit").click(function (e) {
      var email = $("#email").val();
      var name = $("#name").val();
      var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
      if (email === '' || name === '') {
        alert("Please fill all fields...!!!!!!");
        e.preventDefault();
      } else if (!(email).match(emailReg)) {
        alert("Invalid Email...!!!!!!");
        e.preventDefault();
      } else {
        alert("Form Submitted Successfully......");
      }
    });
    console.log("ready!");
    $("#loginButton").click(function () {
      var email = $('#email').val();
      var pass = $('#password').val();
      if (email == "a@a.com" && pass == "123") {
        window.location.href = "/Home/index_l";
      }
      else {
        //alert("no correct info");
        $('#errorMessage').text("In Correct Info,Please Try Again");
        $('#errorMessage').css({ "font-size": "120%", "color": "red" });
      }
    });
  });
  </script>

  <!--<script src="~/Scripts/jquery-2.1.3.min.js"></script>-->
  <script src="~/Scripts/bootstrap.js"></script>
  <script src="~/Scripts/plugins/superfish.min.js"></script>
  <script src="~/Scripts/jquery.ui.min.js"></script>
  <script src="~/Scripts/plugins/rangeslider.min.js"></script>
